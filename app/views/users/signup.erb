<div class="container" style="margin-bottom: 2em">
  <h1>Sign up</h1>
  <hr/>
  <% if @user && @user.errors.any? %>
    <div>
      <strong>Some issues with your fields, please fix them:</strong>
      <ul>
        <% @user.errors.full_messages.each do |message| %> 
          <li><%= message %></li>
        <% end %> 
      </ul>
    </div>
  <% end %> 
  <form method="post" action="/users">
    <div>
      <label>Username:</label>
      <input type="text" name="username" value="<%=params[:username]%>">
    </div>
    <div>
      <label>E-mail:</label>
      <input type="text" name="email" value="<%=params[:email]%>">
    </div>
    <div>
      <label>Password:</label>
      <input type="password" name="password">
    </div>
    <div>
      <input type="submit" value="Submit" class="btn waves-effect amber lighten-4 waves-light" style="color: #616161">
    </div>
  </form>
</div>

